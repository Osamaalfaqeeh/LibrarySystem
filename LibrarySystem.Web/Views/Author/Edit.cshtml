@model LibrarySystem.Application.DTOs.Authors.UpdateAuthorDto

@{
    ViewData["Title"] = "Edit Author";
}

<div class="page-header px-4 py-3">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">
                <i class="fas fa-user-edit"></i>
                Edit Author
            </h1>
            <p class="page-subtitle">Update author information in the library system</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                <i class="fas fa-eye me-1"></i>
                View Details
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>
                Back to List
            </a>
        </div>
    </div>
</div>

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Authors</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Author</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h5 class="card-title mb-0">
                    <i class="fas fa-edit me-2"></i>
                    Update Author Information
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="FirstName" class="form-control" id="firstNameInput" placeholder="First Name" />
                                <label for="firstNameInput">
                                    <i class="fas fa-user me-1"></i>
                                    First Name
                                </label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="LastName" class="form-control" id="lastNameInput" placeholder="Last Name" />
                                <label for="lastNameInput">
                                    <i class="fas fa-user me-1"></i>
                                    Last Name
                                </label>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="fullNamePreview" placeholder="Full Name Preview" readonly />
                                <label for="fullNamePreview">
                                    <i class="fas fa-id-badge me-1"></i>
                                    Full Name Preview
                                </label>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    This preview shows how the updated full name will appear
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>Note:</strong> Changes will be saved immediately when you click "Save Changes" below.
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>
                            Cancel
                        </a>
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                                <i class="fas fa-eye me-1"></i>
                                View Details
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>
                                Save Changes
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-history me-2"></i>
                    Current Information
                </h5>
            </div>
            <div class="card-body">
                <div class="info-item mb-3">
                    <div class="info-label">
                        <i class="fas fa-hashtag text-primary me-2"></i>
                        <strong>Author ID</strong>
                    </div>
                    <div class="info-value">
                        <code>@Model.Id</code>
                    </div>
                </div>
                <div class="info-item mb-3">
                    <div class="info-label">
                        <i class="fas fa-user text-primary me-2"></i>
                        <strong>Original First Name</strong>
                    </div>
                    <div class="info-value" id="originalFirstName">@Model.FirstName</div>
                </div>
                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-user text-primary me-2"></i>
                        <strong>Original Last Name</strong>
                    </div>
                    <div class="info-value" id="originalLastName">@Model.LastName</div>
                </div>
            </div>
        </div>

        <div class="card shadow mt-3">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-lightbulb me-2"></i>
                    Edit Tips
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-start mb-3">
                    <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                    <div>
                        <h6 class="mb-1">Verify Changes</h6>
                        <p class="text-muted small mb-0">Double-check your changes before saving to ensure accuracy.</p>
                    </div>
                </div>
                <div class="d-flex align-items-start mb-3">
                    <i class="fas fa-spell-check text-warning me-3 mt-1"></i>
                    <div>
                        <h6 class="mb-1">Proper Formatting</h6>
                        <p class="text-muted small mb-0">Maintain proper capitalization and spelling for author names.</p>
                    </div>
                </div>
                <div class="d-flex align-items-start">
                    <i class="fas fa-exclamation-triangle text-danger me-3 mt-1"></i>
                    <div>
                        <h6 class="mb-1">Impact Notice</h6>
                        <p class="text-muted small mb-0">Changes may affect books associated with this author.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow mt-3">
            <div class="card-header bg-secondary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-cogs me-2"></i>
                    Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-sm">
                        <i class="fas fa-eye me-2"></i>
                        View Details
                    </a>
                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmDelete('@Model.Id', '@Model.FirstName @Model.LastName')">
                        <i class="fas fa-trash me-2"></i>
                        Delete Author
                    </button>
                    <hr>
                    <a asp-action="Create" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-plus me-2"></i>
                        Add New Author
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle text-danger me-2"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this author?</p>
                <div class="alert alert-warning">
                    <strong>Author:</strong> <span id="modalAuthorName"></span><br>
                    <small class="text-muted">This action cannot be undone and may affect associated books.</small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>
                    Cancel
                </button>
                <a href="#" id="deleteLink" class="btn btn-danger">
                    <i class="fas fa-trash me-1"></i>
                    Delete Author
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Live preview of full name
        function updateFullNamePreview() {
            const firstName = document.getElementById('firstNameInput').value.trim();
            const lastName = document.getElementById('lastNameInput').value.trim();
            const preview = document.getElementById('fullNamePreview');

            if (firstName || lastName) {
                preview.value = `${firstName} ${lastName}`.trim();
            } else {
                preview.value = '';
            }
        }

        // Add event listeners
        document.getElementById('firstNameInput').addEventListener('input', updateFullNamePreview);
        document.getElementById('lastNameInput').addEventListener('input', updateFullNamePreview);

        // Initialize preview
        updateFullNamePreview();

        // Delete confirmation function
        function confirmDelete(authorId, authorName) {
            document.getElementById('modalAuthorName').textContent = authorName;
            document.getElementById('deleteLink').href = '@Url.Action("Delete")/' + authorId;

            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}

<style>
    .page-title {
        margin-bottom: 0.25rem;
        font-size: 1.75rem;
        font-weight: 600;
    }

    .page-subtitle {
        color: #6c757d;
        margin-bottom: 0;
        font-size: 0.95rem;
    }

    .form-floating > label {
        opacity: 0.7;
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        opacity: 1;
    }

    #fullNamePreview {
        background-color: #f8f9fa;
        font-weight: 500;
        color: #495057;
    }

    .info-item {
        padding: 0.75rem;
        border-left: 3px solid #007bff;
        background-color: #f8f9fa;
        border-radius: 0.375rem;
    }

    .info-label {
        font-size: 0.875rem;
        margin-bottom: 0.25rem;
        color: #6c757d;
    }

    .info-value {
        font-size: 1rem;
        color: #212529;
    }
</style>