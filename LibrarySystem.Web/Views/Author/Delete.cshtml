@model LibrarySystem.Application.DTOs.Authors.AuthorDto

@{
    ViewData["Title"] = "Delete Author";
}

<h2>Delete Author</h2>

<h4>Are you sure you want to delete this author?</h4>

<div class="card">
    <div class="card-body">
        <p><strong>First Name:</strong> @Model.FirstName</p>
        <p><strong>Last Name:</strong> @Model.LastName</p>
        <p><strong>Full Name:</strong> @Model.FullName</p>
        <p><strong>Created At:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
