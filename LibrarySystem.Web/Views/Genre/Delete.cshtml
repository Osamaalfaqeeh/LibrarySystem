@model LibrarySystem.Application.DTOs.Genres.GenreDto

@{
    ViewData["Title"] = "Delete Genre";
}

<h2>Delete Genre</h2>

<h4>Are you sure you want to delete this genre?</h4>

<div class="card">
    <div class="card-body">
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Created At:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
