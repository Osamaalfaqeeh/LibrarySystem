@model LibrarySystem.Application.DTOs.Books.BookDto

@{
	ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>

<h4>Are you sure you want to delete this book?</h4>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        <p class="card-text"><strong>Author:</strong> @Model.AuthorName</p>
        <p class="card-text"><strong>Genre:</strong> @Model.GenreName</p>
        <p class="card-text"><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</p>
        <p class="card-text"><strong>Created:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
