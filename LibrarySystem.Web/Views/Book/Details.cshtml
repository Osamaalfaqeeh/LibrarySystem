@model LibrarySystem.Application.DTOs.Books.BookDto
@{
    ViewData["Title"] = "Book Details";
}

<div class="page-header px-4 py-3">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">
                <i class="fas fa-book"></i>
                Book Details
            </h1>
            <p class="page-subtitle">View detailed information about this book</p>
        </div>
    </div>
</div>

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Books</a></li>
        <li class="breadcrumb-item active" aria-current="page">Details</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <div class="form-group mb-3">
                    <label class="form-label">
                        <i class="fas fa-heading me-1"></i>
                        Title
                    </label>
                    <input class="form-control" value="@Model.Title" disabled />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">
                        <i class="fas fa-align-left me-1"></i>
                        Description
                    </label>
                    <textarea class="form-control" rows="4" disabled>@Model.Description</textarea>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">
                        <i class="fas fa-user-edit me-1"></i>
                        Author
                    </label>
                    <input class="form-control" value="@Model.AuthorName" disabled />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">
                        <i class="fas fa-tags me-1"></i>
                        Genre
                    </label>
                    <input class="form-control" value="@Model.GenreName" disabled />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">
                        <i class="fas fa-check-circle me-1"></i>
                        Availability
                    </label>
                    <input class="form-control" value="@(Model.IsAvailable ? "Available" : "Not Available")" disabled />
                    <small class="form-text text-muted">Current availability status</small>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">
                        <i class="fas fa-calendar-plus me-1"></i>
                        Created Date
                    </label>
                    <input class="form-control" value="@Model.CreatedAt.ToString("yyyy-MM-dd")" disabled />
                </div>

                <div class="form-group mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                        <i class="fas fa-edit me-1"></i>
                        Edit Book
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>