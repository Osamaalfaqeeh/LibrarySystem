@model LibrarySystem.Application.DTOs.Members.MemberDto
@{
    ViewData["Title"] = "Member Details";
}

<div class="page-header px-4 py-3">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">
                <i class="fas fa-user"></i>
                Member Details
            </h1>
            <p class="page-subtitle">View detailed information about this member</p>
        </div>
    </div>
</div>

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Members</a></li>
        <li class="breadcrumb-item active" aria-current="page">Details</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <div class="form-group mb-3">
                    <label class="form-label">
                        <i class="fas fa-user me-1"></i>
                        Full Name
                    </label>
                    <input class="form-control" value="@Model.FullName" disabled />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">
                        <i class="fas fa-envelope me-1"></i>
                        Email Address
                    </label>
                    <input class="form-control" value="@Model.Email" disabled />
                    <small class="form-text text-muted">Primary contact email</small>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">
                        <i class="fas fa-phone me-1"></i>
                        Phone Number
                    </label>
                    <input class="form-control" value="@Model.PhoneNumber" disabled />
                    <small class="form-text text-muted">Contact phone number</small>
                </div>

                <div class="form-group mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                        <i class="fas fa-edit me-1"></i>
                        Edit Member
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>